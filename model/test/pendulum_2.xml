<mujoco>
    <asset>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3"
            rgb2=".2 .3 .4" />
        <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2" />
    </asset>

    <worldbody>
        <geom name="floor" size="0 0 .05" type="plane" material="grid" />
        <light diffuse=".5 .5 .5" pos="0 0 5" dir="0 0 -1" />
    </worldbody>

    <worldbody>
        <body name="ball_2" pos="0 0 2">
            <joint type="ball" />
            <geom type="sphere" pos="-1 0 0" size=".1" rgba="0 .9 0 1" />
        </body>
        <body name="ball_1_ref" pos="0 0 2" mocap="true">
            <geom type="sphere" pos="1 0 0" size=".1" rgba="0.5 0.5 0.5 1" />
        </body>
        <body name="ball_1" pos="0 0 2">
            <freejoint />
            <geom type="sphere" pos="1 0 0" size=".1" rgba=".9 0 0 1" />
        </body>
    </worldbody>

    <equality>
        <weld body1="ball_1" body2="ball_1_ref" />
    </equality>

    <contact>
        <exclude body1="ball_1" body2="ball_1_ref" />
        <exclude body1="ball_2" body2="ball_1_ref" />
    </contact>
</mujoco>